
<h1>Add a new order @Model.VendorName</h1>

<form action="/vendors/@Model.Id/orders" method="post">

  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">

  <label for="date">Order Date</label>
  <input id="date" name="date" type="text">

  <label for="breadCount">Order Bread</label>
  <input id="breadCount" name="breadCount" type="text">

  <label for="pastryCount">Order Pastries</label>
  <input id="pastryCount" name="pastryCount" type="text">

  <button type='submit'>Add Order</button>
</form>

@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h2>Vendor List</h2>
<hr>
@if (@Model.Count == 0)
{
  <p>No vendors have been added. <a href='/vendors/new'>Click here to add one.</a></p>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.VendorName</a></h3>
}
<hr>
<p><a href='/vendors/new'>Add Another Vendor</a></p>
<p><a href='/'>Back home</a></p>